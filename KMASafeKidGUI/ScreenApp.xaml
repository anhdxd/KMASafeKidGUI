                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>
        <Button
            Width="35"
            Height="35"
            Margin="789,497,26,18"
            Click="btn_AddBlock">
            <iconPacks:PackIconMaterial Foreground="White" Kind="SettingsHelper" />
        </Button>

        <Button
            Width="35"
            Height="35"
            Margin="735,497,80,18"
            VerticalAlignment="Center"
            Click="btn_InstallApp"
            RenderTransformOrigin="1.257,0.457">
            <iconPacks:PackIconMaterial Foreground="White" Kind="More" />
        </Button>
        <Image
            Width="56"
            Height="54"
            Margin="15,15,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Image/logoKMA.png" />



    </Grid>
</Window>
