        <TextBlock
            Height="37"
            Margin="61,0,324,142"
            VerticalAlignment="Bottom"
            FontSize="24"
            FontWeight="Bold"
            Foreground="Black"><Run Text="Chặn theo nội " /><Run Text="dung" /></TextBlock>
        <TextBlock
            Margin="130,423,525,107"
            FontFamily="Segou UI"
            FontSize="16"
            FontWeight="Bold"
            Foreground="Black"
            Text="Chặn nội dung người lớn" />
        <TextBlock
            Height="26"
            Margin="130,456,576,68"
            FontSize="16"
            FontWeight="Bold"
            Foreground="Black"><Run Text="Chặn mạng xã hội" /></TextBlock>
        <TextBlock
            Margin="130,491,567,30"
            FontSize="16"
            FontWeight="Bold"
            Foreground="Black"
            RenderTransformOrigin="0.497,0"><Run Text="Chặn xem video" /></TextBlock>
        <ToggleButton
            x:Name="Toggle_btn1"
            Width="36"
            Height="19"
            Margin="369,494,445,37"
            Panel.ZIndex="1"
            Checked="Video_Setting_Checked"
            RenderTransformOrigin="7.139,-1.421">
            <ToggleButton.Template>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border
                        x:Name="B1"
                        Padding="1"
                        Background="White"
                        CornerRadius="10">
                        <Border
                            x:Name="B2"
                            Width="{TemplateBinding Height}"
                            HorizontalAlignment="Left"
                            Background="CornflowerBlue"
                            CornerRadius="20">
                            <ContentPresenter />
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="B2" Property="HorizontalAlignment" Value="Right" />
                            <Setter TargetName="B1" Property="Background" Value="CornflowerBlue" />
                            <Setter TargetName="B2" Property="Background" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>
        <ToggleButton
            x:Name="Toggle_btn2"
            Width="37"
            Height="19"
            Margin="369,422,444,109"
            Panel.ZIndex="1"
            Checked="Adult_Setting_Checked">
