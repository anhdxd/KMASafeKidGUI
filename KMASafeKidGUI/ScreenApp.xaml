<Window
    x:Class="KMASafeKidGUI.ScreenApp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:KMASafeKidGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:KMASafeKidGUI.Model"
    Title="MainWindow"
    Width="850"
    Height="550"
    AllowsTransparency="True"
    Background="Transparent"
    Foreground="Transparent"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:AppDiary />
    </Window.DataContext>
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />


        </Grid.RowDefinitions>
        <Border
            x:Name="MainBorder"
            CornerRadius="20"
            MouseDown="Window_MouseDown">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.0" Color="#7be9f6" />
                    <GradientStop Offset="1" Color="#FFE666CC" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="0,-11,0,11">
                <Border
                    Height="247"
                    Margin="88,123,88,0"
                    VerticalAlignment="Top"
                    Background="White"
                    BorderBrush="White"
                    BorderThickness="1"
                    CornerRadius="15" />
                <DataGrid
                    Margin="102,134,102,190"
                    Background="#FFF1E8E8"
                    BorderBrush="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="Black"
                    IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="250"
                            Binding="{Binding AppName}"
                            Foreground="Black"
                            Header="Phần Mềm/Web" />
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="100"
                            Binding="{Binding TimeStart}"
                            Header="Thời gian bắt đầu" />
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="100"
                            Binding="{Binding TimeUsed}"
                            Header="Thời gian sử dụng" />
                    </DataGrid.Columns>
                    <DataGrid.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Grid>
        </Border>

        <Grid
            Grid.Row="0"
            Height="50"
            Margin="2,65,10,435">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <TextBlock
                Margin="65,8,273,2"
                FontSize="22"
                FontWeight="Bold"
                Foreground="Black"
                RenderTransformOrigin="0.472,-2.5"
                Text="Nhật ký sử dụng phần mềm/Truy cập webSite" />
            <Button
                Width="30px"
                Height="30px"
                Margin="802,-49,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ClickClose"
                FontWeight="Normal">
                <iconPacks:PackIconMaterial Foreground="White" Kind="Close" />

            </Button>
        </Grid>
