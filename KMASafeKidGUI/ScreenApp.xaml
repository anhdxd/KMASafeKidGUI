    Title="ScreenWindow"
    Width="850"
    Height="550"
    AllowsTransparency="True"
    Background="Transparent"
    Foreground="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:DataView />
    </Window.DataContext>
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />


        </Grid.RowDefinitions>
        <Border
            x:Name="MainBorder"
            CornerRadius="20"
            MouseDown="Window_MouseDown">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.0" Color="#FF34D3C4" />
                    <GradientStop Offset="1" Color="#FFEC53CD" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="0,-11,0,11">
                <Border
                    Height="278"
                    Margin="68,92,69,0"
                    VerticalAlignment="Top"
                    Background="White"
                    BorderBrush="White"
                    BorderThickness="1"
                    CornerRadius="15" />
                <DataGrid
                    x:Name="DataGridDiary"
                    Margin="93,107,93,190"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    AutoGenerateColumns="False"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    BorderThickness="0"
                    FontFamily="Arial"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    GridLinesVisibility="Horizontal"
                    HorizontalGridLinesBrush="#FFB9E6F0"
                    IsReadOnly="True"
                    ItemsSource="{Binding ViewAppDiary, UpdateSourceTrigger=PropertyChanged}"
                    VerticalGridLinesBrush="#FF807E7E">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="250"
                            Binding="{Binding AppName}"
                            Foreground="Black"
                            Header="Phần Mềm/Web" />
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="100"
                            Binding="{Binding TimeStart}"
                            Header="Thời gian bắt đầu" />
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="100"
                            Binding="{Binding TimeUsed}"
                            Header="Thời gian sử dụng" />
                    </DataGrid.Columns>
                    <DataGrid.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Grid>
        </Border>

        <Grid
            Grid.Row="0"
            Height="50"
            Margin="2,65,10,435">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <TextBlock
                Margin="169,-20,169,30"
                FontSize="22"
                FontWeight="Bold"
                Foreground="Black"
                RenderTransformOrigin="0.472,-2.5"
                Text="Nhật ký sử dụng phần mềm/Truy cập webSite" />
            <Button
                Width="30px"
                Height="30px"
                Margin="802,-49,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ClickClose"
                FontWeight="Normal">
                <iconPacks:PackIconMaterial Foreground="White" Kind="Close" />

            </Button>
        </Grid>
